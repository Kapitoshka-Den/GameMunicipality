            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="#FFEEC55B"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="10,0,0,10"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#FFEEC55B"/>
        </Style>
        <Style x:Key="StackDataStyle" TargetType="DockPanel">
            <Setter Property="Background" Value="#FF681312"/>
            <Setter Property="LastChildFill" Value="False"/>
        </Style>
        <Style TargetType="Border" x:Key="cardBorder">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderBrush" Value="#FFEEC556"/>
            <Setter Property="BorderThickness" Value="3"/>
        </Style>
    </Window.Resources>
