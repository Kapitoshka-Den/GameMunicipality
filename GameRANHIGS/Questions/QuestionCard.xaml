<Window x:Class="GameRANHIGS.Questions.QuestionCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameRANHIGS.Questions"
        mc:Ignorable="d"
        Title="QuestionCard" Height="200" Width="300"
        WindowStyle="None"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Случайное событие"
                   FontSize="20"
                   Background="#FFFFFF92"
                   TextAlignment="Center"/>
        <TextBlock Grid.Row="1"
                   Name="QuestionTextBlock"
                   TextWrapping="Wrap"
                   Margin="10"
                   />
        <Button Grid.Row="2"
                Width="60"
                Height="20"
                Content="Выход"
                Click="Button_Click"
                IsCancel="True"
                IsDefault="True"/>
    </Grid>
</Window>
